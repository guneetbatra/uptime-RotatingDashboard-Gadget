<?xml version="1.0" encoding="UTF-8"?>
<Module>
	<ModulePrefs title="Rotating Dashboards" description="Rotate through your up.time dashboards." thumbnail="displayUrlThm.png"/>
	<gadget_version>
		<%= pkg.gadget_version %>
	</gadget_version>
	<grid_info>
		<supported_versions>
			7.3
		</supported_versions>
		<supported_platforms>
			windows,linux
		</supported_platforms>
		<requires_agent_scripts>
			false
		</requires_agent_scripts>
		<upgrade_in_place>
			true
		</upgrade_in_place>
	</grid_info>
	<Content type="html">
	<![CDATA[
	<link href="__UPTIME_HTTP_BASE__/styles/chosen/chosen.css?v=7.3.0.7" rel="stylesheet" type="text/css" />
	<style scoped="scoped">
		div {
			font-family: Verdana, Arial, Helvetica, sans-serif;
			font-size: 9px;
		}
		#error {
			padding: 5px;
			display: none;
			width: 100%;
			margin-left: auto;
			margin-right: auto;
		}
		#dest {
			background-image: url("__UPTIME_GADGET_BASE__/spinner.gif");
			background-position: 5px 5px;
			background-repeat: no-repeat;
			width: 100%;
		}
		#edit {
			padding: 5px;
			display: none;
			width: 100%;
			height: 100%;
		}
		input[type=text],label,select,button {
			max-width: 300px;
			margin-bottom: 3px;
			display: block;
			clear: both;
		}
		select {
			width: 160px;
		}
		input[type=text] {
			width: 100%;
		}
		#eg {
			color: rgba(0, 0, 0, 0.5);
		}
		#refreshInterval {
			padding-left: 6px;
			display: none;
		}
		#minutePlural {
			display: none;
		}
	</style>
	<div id="error"></div>
	<div id="dest"></div>
	<div id="edit">
		<label for="dashboards">Dashboards:</label>
		<select id="dashboards" multiple="true" data-placeholder="Select some dashboards">
		</select>
		<label for="scroll">Scroll bars:</label>
		<select id="scroll">
			<option value="auto">Auto</option>
			<option value="yes">Always</option>
			<option value="no">Never</option>
		</select>
		<label for="refreshRate">Refresh Rate:</label>
		<select id="refreshRate" name="refreshRate">
			<option value="5">5s</option>
			<option value="30">30s</option>
			<option value="60">1m</option>
			<option value="300">5m</option>
			<option value="600">10m</option>
			<option value="900">15m</option>
			<option value="3600">1h</option>
			<option value="-1">Never</option>
		</select>
		<button id="save">Save</button>
	</div>
	#includeResources(jquery)
	<script type="text/javascript" src="__UPTIME_GADGET_BASE__/dashboardRotator.js?v=<%= pkg.gadget_version %>"></script>
	<script type="text/javascript" src="__UPTIME_HTTP_BASE__/ajax/chosen.jquery.min.js?v=<%= pkg.gadget_version %>"></script>
	]]>
	</Content>
</Module>
